{
    "compilerOptions": {
        // Compiling to es6 to use additional features
        "target": "es6",
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}
